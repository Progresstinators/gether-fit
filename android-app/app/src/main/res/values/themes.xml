<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- The normal theme -->
    <style name="Theme.GetherFit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_1</item>
        <item name="colorPrimaryVariant">@color/grey_2</item>
        <item name="colorOnPrimary">@color/grey_3</item>
        <item name="colorError">@color/red_2</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_2</item>
        <item name="colorSecondaryVariant">@color/green_1</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- The corner radius -->
        <item name="cornerRadius">8dp</item>

        <!-- Disable automatic dark theme -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Set the text color to white -->
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- The KLVAD theme -->
    <style name="Theme.KLVAD" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_1</item>
        <item name="colorPrimaryVariant">@color/blue_2</item>
        <item name="colorOnPrimary">@color/blue_3</item>
        <item name="colorError">@color/red_2</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_2</item>
        <item name="colorSecondaryVariant">@color/yellow_1</item>
        <item name="colorOnSecondary">@color/red_1</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- The corner radius -->
        <item name="cornerRadius">8dp</item>

        <!-- Disable automatic dark theme -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Set the text color to white -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="h1">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="h2">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="settings_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="h3">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_input_layout">
        <item name="errorTextColor">?attr/colorError</item>
        <item name="hintTextColor">@color/grey_5</item>
        <item name="boxBackgroundColor">?attr/colorOnPrimary</item>
    </style>

    <style name="text_input">
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="hintTextColor">@color/grey_5</item>
    </style>

    <style name="description_text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="selected_chip">
        <item name="chipBackgroundColor">?attr/colorSecondary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="unselected_chip">
        <item name="chipBackgroundColor">?attr/colorOnPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="profile_picture">
        <item name="civ_border_width">4dp</item>
        <item name="civ_border_color">@color/white</item>
    </style>

    <style name="vertical_divider">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey_5</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/grey_5</item>
    </style>

</resources>