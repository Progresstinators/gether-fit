<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="100dp"
        android:height="108dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimaryVariant" />
        </shape>
    </item>
    <item
        android:height="50dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" />
        </shape>
    </item>
    <item
        android:top="?attr/cornerRadius"
        android:left="?attr/cornerRadius"
        android:right="?attr/cornerRadius">
        <shape
            android:shape="rectangle">
            <corners android:radius="?attr/cornerRadius" />
            <solid android:color="?attr/colorPrimaryVariant" />
            <size android:height="3px" />
        </shape>
    </item>
    <item
        android:width="?attr/cornerRadius">
        <shape
            android:layout_width="match_parent"
            android:shape="rectangle">
            <corners android:bottomRightRadius="?attr/cornerRadius"/>
            <solid android:color="?attr/colorPrimary" />
        </shape>
    </item>
    <item
        android:gravity="right"
        android:width="?attr/cornerRadius">
        <shape
            android:layout_width="match_parent"
            android:shape="rectangle">
            <corners android:bottomLeftRadius="?attr/cornerRadius"/>
            <solid android:color="?attr/colorPrimary" />
        </shape>
    </item>
</layer-list>