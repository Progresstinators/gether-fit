<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.progresstinators.getherfit.MainActivity">

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/navigation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/colorPrimary" />

    <View
        app:layout_constraintTop_toBottomOf="@id/navigation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/colorPrimaryVariant" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="@string/app_name"
        style="@style/h1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="12dp"
        android:onClick="openSettings"
        android:contentDescription="@string/description_settings"
        android:src="@drawable/ic_baseline_settings_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <de.progresstinators.getherfit.shared.components.ImageButton
                android:id="@+id/personal_space"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="openPersonal"
                app:logo="@drawable/personal"
                app:title="@string/main_personal"/>

            <View
                style="@style/vertical_divider"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <de.progresstinators.getherfit.shared.components.ImageButton
                android:id="@+id/dummy_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="openGroup"
                app:logo="@drawable/logo"
                app:title="@string/app_name"/>

            <de.progresstinators.getherfit.shared.components.ImageButton
                android:layout_marginStart="-12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addGroup"
                app:logo="@drawable/add_group"
                app:title="@string/main_group_add"/>

        </LinearLayout>

    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/content"
        app:layout_constraintTop_toBottomOf="@id/navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>